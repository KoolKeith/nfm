				<Setter TargetName="Border"
						Property="Border.BorderBrush"
						Value="{DynamicResource {x:Static Themes:Theme.WorkAreaBackgroundBrushKey}}" />
			</MultiTrigger.Setters>
		</MultiTrigger>
-->
