<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:FileSystem="clr-namespace:Nfm.Core.ViewModels.FileSystem;assembly=Nfm.Core">

	<DataTemplate DataType="{x:Type FileSystem:LocalFileSystemModuleFullVM}">
		<DockPanel>
			<TextBlock Text="{Binding Path=Name}"
					   Foreground="{StaticResource ForegroundBrush}"
					   Margin="3"
					   DockPanel.Dock="Top" />
			<ListBox ItemsSource="{Binding Path=Childs, IsAsync=True}"
					 Style="{StaticResource ListBoxStyle}"
					 ItemContainerStyle="{StaticResource ListBoxItemStyle}"
					 ListBoxExt.SelectedItemsSource="{Binding Path=SelectedItems, IsAsync=True}"
					 ElementUtility.Dummy="{KeyboardFocusManager}">
			</ListBox>
		</DockPanel>
	</DataTemplate>

</ResourceDictionary>