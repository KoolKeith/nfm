<UserControl x:Class="Nfm.Core.Resources.Icons.TriangleArrow"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:Themes="clr-namespace:Nfm.Core.Themes"
			 x:Name="Parent"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="300">
	
	<Path Stretch="Uniform"
		  StrokeThickness="0.5"
		  Stroke="{DynamicResource {x:Static Themes:Theme.BackgroundBrushKey}}"
		  Fill="{Binding ElementName=Parent, Path=Foreground}"
		  Data="M 0 0 L 4 4 L 8 0 Z"
		  HorizontalAlignment="Stretch"
		  VerticalAlignment="Stretch" />

