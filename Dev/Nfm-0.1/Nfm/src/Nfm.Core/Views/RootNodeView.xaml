<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:Nfm.Core.ViewModels;assembly=Nfm.Core">
    
	<DataTemplate DataType="{x:Type ViewModels:RootNodeVM}">
		<ListBox ItemsSource="{Binding Path=Childs, IsAsync=True}"
				 Style="{StaticResource ListBoxStyle}"
				 ItemContainerStyle="{StaticResource ListBoxItemStyle}"
				 ListBoxExt.SelectedItemsSource="{Binding Path=SelectedItems, IsAsync=True}"
				 ElementUtility.Dummy="{KeyboardFocusManager}">
		</ListBox>
	</DataTemplate>
	
</ResourceDictionary>