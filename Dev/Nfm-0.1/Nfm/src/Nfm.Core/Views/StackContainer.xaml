<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:ctrl="clr-namespace:Nfm.Core.Controls;assembly=Nfm.Core"
					xmlns:vm="clr-namespace:Nfm.Core.ViewModels;assembly=Nfm.Core">

	<DataTemplate DataType="{x:Type vm:StackContainer}">
		<ItemsControl ItemsSource="{Binding Path=Childs}"
					  IsTabStop="False">
			<ItemsControl.ItemsPanel>
				<ItemsPanelTemplate>
					<ctrl:UniformStack Orientation="{Binding Path=Orientation}" />
				</ItemsPanelTemplate>
			</ItemsControl.ItemsPanel>
		</ItemsControl>
	</DataTemplate>

</ResourceDictionary>