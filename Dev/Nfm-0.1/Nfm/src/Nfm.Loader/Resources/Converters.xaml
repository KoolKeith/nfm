<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
					xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
					xmlns:convert="clr-namespace:Nfm.Core.Converters;assembly=Nfm.Core"
					xmlns:fs="clr-namespace:Nfm.Core.ViewModels.FileSystem.Icons;assembly=Nfm.Core"
					mc:Ignorable="d">

	<convert:BoolToCornerRadiusConverter x:Key="BoolToCornerRadiusConverter" />
	<convert:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
	<convert:BoolToVisibilityConverter x:Key="BoolToVisibilityHiddenConverter"
									   HiddenOnly="True" />
	<convert:FileSizeToStringConverter x:Key="FileSizeToStringConverter" />
	<convert:FileSizeToStringConverter x:Key="FileSizeToStringSpecificConverter"
									   KByteUnit="KiloByte"
									   MByteUnit="MegaByte"
									   GByteUnit="GigaByte"
									   TByteUnit="TeraByte"
									   GBytePrecision="OneDecimalPlaces"
									   TBytePrecision="TwoDecimalPlaces" />
	<convert:FileSizeToBrushConverter x:Key="FileSizeToBrushConverter"
									  ByteBrush="{StaticResource FileSizeByteBrush}"
									  KByteBrush="{StaticResource FileSizeKByteBrush}"
									  MByteBrush="{StaticResource FileSizeMByteBrush}"
									  GByteBrush="{StaticResource FileSizeGByteBrush}"
									  TByteBrush="{StaticResource FileSizeTByteBrush}" />
	<convert:FileExtensionToBrushConverter x:Key="FileExtensionToBrushConverter"
										   ExecutableBrush="#FF00FF00"
										   LibraryBrush="#FF007B00"
										   VideoBrush="#FFFF7BFF"
										   AudioBrush="#FF7B7BFF"
										   ImageBrush="#FFFF007B"
										   ArchiveBrush="#FF007BC0"
										   TemporaryBrush="#FF7B7B00"
										   SourceBrush="#FF00FFFF"
										   WebBrush="#FFFF7B00"
										   NormalBrush="#FFFFFFFF" />
	<convert:FileExtensionToBrushConverter x:Key="FileExtensionToBackgroundBrushConverter"
										   ExecutableBrush="#2200FF00"
										   LibraryBrush="#22007B00"
										   VideoBrush="#22FF7BFF"
										   AudioBrush="#227B7BFF"
										   ImageBrush="#22FF007B"
										   ArchiveBrush="#22007BC0"
										   TemporaryBrush="#227B7B00"
										   SourceBrush="#2200FFFF"
										   WebBrush="#22FF7B00"
										   NormalBrush="{StaticResource ListItemBackgroundBrush}" />
	<convert:FileExtensionToBrushConverter x:Key="FileExtensionToBackgroundHoverBrushConverter"
										   ExecutableBrush="#6600FF00"
										   LibraryBrush="#66007B00"
										   VideoBrush="#66FF7BFF"
										   AudioBrush="#667B7BFF"
										   ImageBrush="#66FF007B"
										   ArchiveBrush="#66007BC0"
										   TemporaryBrush="#667B7B00"
										   SourceBrush="#6600FFFF"
										   WebBrush="#66FF7B00"
										   NormalBrush="{StaticResource HoverBackgroundBrush}" />
	<convert:DateTimeToStringConverter x:Key="DateTimeToStringConverter" />
	<convert:DateTimeToBrushConverter x:Key="DateTimeToBrushConverter" />
	<fs:FileToIconConverter x:Key="FileToIconConverter" DefaultSize="32" />
	

</ResourceDictionary>